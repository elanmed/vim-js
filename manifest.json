{
  "name": "vim-js",
  "description": "A minimalist vimium",
  "version": "0.0.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "switch-to-prev-tab": {
      "description": "Switch to the previous tab"
    },
    "scroll-down": {
      "description": "Scroll down by a half-page"
    },
    "scroll-up": {
      "description": "Scroll up by a half-page"
    },
    "switch-to-left-tab": {
      "description": "Switch to the tab to the left"
    },
    "switch-to-right-tab": {
      "description": "Switch to the tab to the right"
    }
  }
}
